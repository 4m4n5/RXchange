<!DOCTYPE html>
<html ng-app="RXchange">
  <head>
    <meta charset="utf-8">
    <base href="/">
    <title>RXchange | Room Exchange platform for IITR</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-animate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/factories.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/ng-animations.css">
  </head>
  <body>
      <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-if="isLoggedIn()"><a href="/#/home">Home</a></li>
        <li ng-if="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-if="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-if="!isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-if="!isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="ui-view-container">
          <div class="slide-top" ui-view></div>
        </div>
      </div>
    </div>
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>
            RXchange
          </h1>
        </div>
        <div ng-repeat="post in posts | orderBy:'-interests'">
          <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementInterests(post)"></span>
          {{post.interests}}
          <span style="font-size:20px; margin-left:10px;">
            {{post.room_no}} - submitted by: {{post.name}}
          </span>
          <span>
            <a href="#/posts/{{post._id}}">Comments</a>
          </span>
        </div>

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a room.</h3>
        </div>
        <form ng-submit="addPost()" ng-show="isLoggedIn()" style="margin-top:30px;">
          <h3>Add a New Room to market</h3>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Room No" ng-model="room_no"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Your Name" ng-model="name"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Preference" ng-model="preference"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Email Id" ng-model="email"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Mobile Number" ng-model="mobile"></input>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Password" ng-model="password"></input>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
        </form>
      </script>
    <script type="text/ng-template" id="/posts.html">
      <div class="page-header">
        <h3>
          {{post.room_no}} - {{post.name}}
        </h3>
      </div>

      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
      </div>
      <form ng-submit="addComment()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Comment"
          ng-model="body"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </script>
    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>RXchange</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()"
        style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>
    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>RXchange</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()"
        style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>
  </body>
</html>
