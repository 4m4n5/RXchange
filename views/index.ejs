<!DOCTYPE html>
<html ng-app="RXchange">
  <head>
    <meta charset="utf-8">
    <base href="/">
    <title>RXchange | Room Exchange platform for IITR</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.2/angular-animate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/factories.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/ng-animations.css">
  </head>
  <body>
    <header class="head">
      <div class="logo pull-left">
        <h3 class=""><a href="/#/home">RXchange</a></h3>
      </div>
      <div class="pull-right" ng-controller="NavCtrl">
        <ul class="navigation">
          <li ng-if="isLoggedIn()"><a href="/#/home">Home</a></li>
          <li ng-if="isLoggedIn()"><a>{{ currentUser() }}</a></li>
          <li ng-if="isLoggedIn()"><a href="#" ng-click="logOut()">Log Out</a></li>
          <li ng-if="!isLoggedIn()"><a href="/#/login">Log In</a></li>
          <li ng-if="!isLoggedIn()"><a href="/#/register">Register</a></li>
        </ul>
      </div>
    </header>
    <div class="ui-view-container">
      <div class="slide-top tpadding30" ui-view></div>
    </div>
    <script type="text/ng-template" id="/home.html">
      <div ng-if="!isLoggedIn()">
        <h3 class="tmargin0 bmargin30">You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a room.</h3>
      </div>
      <div ng-if="isLoggedIn()">
        <h3 class="tmargin0 bmargin30">
        <i class="fa"
          ng-click="viewForm = !viewForm"
          ng-class="{'fa-plus-circle': !viewForm, 'fa-minus-circle': viewForm}"></i>&nbsp;Add a New Room to market</h3>
      </div>

      <form ng-submit="addPost()" ng-if="isLoggedIn()" class="form-inline">
        <div class="form-group">
        <label>Room No</label>
          <input type="text" class="form-control" placeholder="Room No" ng-model="room_no"></input>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Bhawan" ng-model="bhawan"></input>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Your Name" ng-model="name"></input>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Preference" ng-model="preference"></input>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Email Id" ng-model="email"></input>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Mobile Number" ng-model="mobile"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>

      <div ng-repeat="post in posts | orderBy:'pub_date':true" class="room-tile toggle">
        <div class="room">{{post.room_no}}, {{post.bhawan}}</div>
        <div class="owner">Currently alloted to <span class="text-capitalize">{{post.name}}</span></div>
        <div class="preference">Interested in <span class="text-capitalize">{{post.preference}}</span></div>
        <div class="btn contact"
          ng-if="!post.showContacts"
          ng-click="post.showContacts = !post.showContacts">
          <i class="fa fa-phone"></i>&nbsp;Contact
        </div>
        <div class="contact-details" ng-if="post.showContacts">
          <span class="text-capitalize fs18">{{post.name}}</span><br>
          <span class="grey"><i class="fa fa-paper-plane-o"></i>&nbsp;{{post.email}}</span><br>
          <span class="grey"><i class="fa fa-phone"></i>&nbsp;{{post.mobile}}</span>
        </div>
        <span class="interests">
          <i class="fa fa-thumbs-o-up" ng-click="incrementInterests(post)"></i> {{post.interests}}
        </span>
        <span class="comments">
          <a href="#/posts/{{post._id}}"><i class="fa fa-comments-o"></i>&nbsp;Comment</a>
        </span>
      </div>
    </script>
    <script type="text/ng-template" id="/posts.html">
      <div class="page-header">
        <h3>
          {{post.room_no}} - {{post.name}}
        </h3>
      </div>

      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
      </div>
      <form ng-submit="addComment()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Comment"
          ng-model="body"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
    </script>
    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>RXchange</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()"
        style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>
    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>RXchange</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()"
        style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>
  </body>
</html>
